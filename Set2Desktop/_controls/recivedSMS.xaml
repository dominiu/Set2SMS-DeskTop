<UserControl x:Class="Set2Desktop._controls.recivedSMS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="300">
    <Grid>
        <Label x:Name="senderName" Content="Sender Name" VerticalAlignment="Top" Foreground="#FFA2A2A2" HorizontalAlignment="Left" Margin="5,0,0,0"/>
        <Border Background="#3F2D86A8" BorderThickness="1" CornerRadius="5" BorderBrush="#FFC3C3C3" Margin="5,30,60,5" Padding="5" MaxWidth="220">
            <TextBlock Name="conversation" MaxWidth="233" Text="Conversation" TextWrapping="WrapWithOverflow" Padding="5"/>            
        </Border>
        <Image x:Name="picture" Height="48" Width="48" Source="pack://siteoforigin:,,,/Resources/user.png" HorizontalAlignment="Right" Margin="0,25,5,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
