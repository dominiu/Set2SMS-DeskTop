<UserControl x:Class="Set2Desktop._controls.sendSMS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="300">
    <Grid>
        <Label x:Name="senderName" Content="Sender Name" VerticalAlignment="Top" Foreground="#FFA2A2A2" HorizontalAlignment="Right" Margin="0,0,5,0"/>
        <Border Background="#3F78B81B" BorderThickness="1" CornerRadius="5" BorderBrush="#FFBBBBBB" Margin="60,30,5,5" Padding="5" MaxWidth="220">
            <TextBlock Name="conversation" MaxWidth="233" Text="Conversation" TextWrapping="WrapWithOverflow" Padding="5"/>
        </Border>
        <Image x:Name="picture" HorizontalAlignment="Left" Height="48" Width="48" Source="pack://siteoforigin:,,,/Resources/user.png" Margin="5,25,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>

